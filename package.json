{
  "name": "BidVault",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:css && vite build",
    "dev": "npm run watch:css & vite",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier .",
    "prepare": "husky install",
    "build:css": "sass ./src/styles/scss/styles.scss | npx tailwindcss -i ./src/css/styles.css -o ./src/css/styles.css --minify",
    "watch:css": "sass --watch ./src/styles/scss/styles.scss:./src/css/styles.css & npx tailwindcss -i ./src/css/styles.css -o ./src/css/styles.css --watch"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "husky": "^8.0.0",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "sass": "^1.82.0",
    "tailwindcss": "^3.4.16",
    "vite": "^5.4.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  }
}
